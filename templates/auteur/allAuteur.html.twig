{% extends "layout.html.twig" %}

{% block title %} les auteurs {% endblock %}

{% block content %}
    les auteurs:

    <table class="table text-center">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for auteur in auteurs %}    
                <tr>
                    <td>{{ auteur.nom }}</td>
                    <td>{{ auteur.prenom }}</td>
                    <td>
                        <a href="{{ path('app_auteur' , {id: auteur.id}) }}">
						    <i class="fas fa-eye mx-1 text-success"></i>
                        </a>
                        <a href="{{ path('app_auteur_update', {id: auteur.id}) }}">
						    <i class="fas fa-edit mx-1 text-primary"></i>
                        </a>
                        <a href="{{ path('app_auteur_delete', {id: auteur.id}) }}"  onClick="return confirm('êtes vous sûr de vouloir supprimer l\'auteur ?')" >
                            <i class="fas fa-trash mx-1 text-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}